<div class="scenario-two-lists2 clearfix">
  <div class="controls">
    <label>Bounce back <input type="checkbox" checked={{bounceBack}} onchange={{action (mut bounceBack) (not bounceBack)}}></label>
  </div>

  <AnimatedContainer>
    {{#animated-each leftItems use=transition as |item|}}
      <div>
        {{item.id}}
        <button {{action "move" item}}>&rarr;</button>
      </div>
    {{/animated-each}}
  </AnimatedContainer>

  <AnimatedContainer>
    {{#animated-each rightItems use=transition as |item|}}
      <div>
        <button {{action "move" item}}>&larr;</button>
        {{item.id}}
      </div>
    {{/animated-each}}
  </AnimatedContainer>

</div>