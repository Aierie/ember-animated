<div class="scenario-two-lists">
  {{#animated-container}}
    {{#animated-each leftItems rules=rules as |item|}}
      <div>
        {{item.id}}
        <button {{action "moveRight" item}}>&rarr;</button>
      </div>
    {{/animated-each}}
  {{/animated-container}}

  {{#animated-container}}
    {{#animated-each rightItems rules=rules as |item|}}
      <div>
        <button {{action "moveLeft" item}}>&larr;</button>
        {{item.id}}
      </div>
    {{/animated-each}}
  {{/animated-container}}

</div>
