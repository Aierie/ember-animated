{{! BEGIN-SNIPPET between-components-snippet.hbs }}
<div class="scenario-sprites clearfix">

  <div class="controls">
    <label>Delete with Undo <input type="checkbox" checked={{deleteUndo}} onchange={{action (mut deleteUndo) (not deleteUndo)}}></label>
  </div>

    {{#animated-container class="image"}}
        {{#animated-beacon name="trash"}}
          <div class="img">
            {{svg-jar "trash-big"}}
          </div>
      {{/animated-beacon}}
    {{/animated-container}}

    {{#animated-beacon name="add"}}
        <button {{action "addItem" item}}>{{svg-jar "envelope"}}</button>
    {{/animated-beacon}}

    {{#animated-container}}
        {{#animated-each items use=transition as |item|}}
            <div class="each-item">
                <input type="checkbox" onclick={{action "removeItem" item}}>
                {{item.message}}
            </div>
        {{/animated-each}}
    {{/animated-container}}

</div>

{{! END-SNIPPET }}
