{{! BEGIN-SNIPPET between-components-snippet.hbs }}
<div class="scenario-sprites">
  <h1>Inbox</h1>

  <div class="controls">
    <label>Delete with Undo <input type="checkbox" checked={{deleteUndo}} onchange={{action (mut deleteUndo) (not deleteUndo)}}></label>
  </div>

    {{#animated-beacon name="trash"}}
        <div class="scenario-beacon-trash">Trash</div>
    {{/animated-beacon}}                          

    {{#animated-beacon name="add"}}
        <button {{action "addItem" item}}>Refresh</button>
    {{/animated-beacon}}

    {{#animated-container}}
        {{#animated-each items key="id" use=transition as |item|}}
            <div class="each-item">
                {{item.message}}
                    <button {{action "removeItem" item}}>Delete</button>
            </div>
        {{/animated-each}}
    {{/animated-container}}
    
  {{message}}

</div>

{{! END-SNIPPET }}
