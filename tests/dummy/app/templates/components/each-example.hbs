<div class="scenario-each">
  <button {{action "addItem"}}>Add Item</button>
  <button {{action "shuffle"}}>Shuffle</button>
  <button {{action "sortNumeric"}}>Sort</button>

  {{#animated-container as |c|}}
    {{#animated-each items notify=c key="id" rules=rules as |item|}}
      <div>
        {{item.id}}
        <button {{action "removeItem" item}}>X</button>
        <button {{action "replaceItem" item}}>R</button>
        <button {{action "mutate" item}}>M</button>
      </div>
      {{#if item.extra}}
        <div>I am extra</div>
      {{/if}}
    {{/animated-each}}
  {{/animated-container}}

  This is after the list.
</div>
