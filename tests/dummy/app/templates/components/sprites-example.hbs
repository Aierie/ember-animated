{{! BEGIN-SNIPPET sprites-snippet.hbs }}
<div class="scenario-sprites clearfix">
  <div class="message">
    <button {{action "addItem"}}>{{svg-jar "envelope"}}</button>
    {{!-- <label>{{svg-jar "trash-small"}}</label><input type="checkbox" checked={{deleteAll}} onclick={{action "deleteItems"}}> --}}
    <button {{action "deleteItems"}}>{{svg-jar "trash-small"}}</button>
     <div class="mail-buttons">
      <button>{{svg-jar "mail-reply"}}</button>
      <button>{{svg-jar "mail-reply-all"}}</button>
      <button>{{svg-jar "mail-forward"}}</button>
    </div>
  </div>

  <div class="sidebar">
    <table>
      <th>Mail</th>
      <tr>
        <td>{{svg-jar "inbox"}} Inbox({{items.length}})</td>
      </tr>
      <tr>
        <td>{{svg-jar "paper-plane"}} Sent Mail</td>
      </tr>
      <tr>
        <td>{{svg-jar "pencil"}} Drafts(3)</td>
      </tr>
    </table>
  </div>
  <div class="inbox">
    {{#animated-container}}
        {{#animated-each items use=transition as |item|}}
          <div class="each-item">
            <input type="checkbox" checked={{item.deleteMessage}} onchange={{action (mut item.deleteMessage) (not item.deleteMessage)}}>
            {{item.message}}
          </div>
        {{/animated-each}}
    {{/animated-container}}
  </div>
</div>
{{! END-SNIPPET }}
