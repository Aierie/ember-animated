<div class="scenario-bind">
  {{#animated-container}}
    {{#animated-bind counter rules=rules duration=1000 as |v|}}
      <span>{{v}}</span>
    {{/animated-bind}}
  {{/animated-container}}

  {{#if showBoth}}
    {{#animated-container}}
      {{#animated-bind counter rules=rules2 duration=1000 as |v|}}
        <span>{{v}}</span>
      {{/animated-bind}}
    {{/animated-container}}
  {{/if}}

  <button {{action "increment"}}>+</button>
  <button {{action "decrement"}}>-</button>
  {{input type="checkbox" checked=showBoth}}
</div>
